# Database Configuration
# SQLite is used for metadata storage (books, etc.)
DATABASE_URL=sqlite:///./data/database/hbi.db

# Neo4j Graph Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4jpassword

# MinIO Object Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_NAME=books

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO

# Optional: Langfuse Configuration (for LLM observability)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=http://localhost:3001

# Optional: External Services
# For production, you might want to use external vector databases
# QDRANT_URL=http://localhost:6333
# REDIS_URL=redis://localhost:6379